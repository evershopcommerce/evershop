{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "lib": ["esnext", "dom"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx"
  }
} 