{
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "skipEscape": true
    },
    "image": {
      "type": "string"
    },
    "meta_title": {
      "type": "string"
    },
    "meta_description": {
      "type": "string"
    },
    "meta_keywords": {
      "type": "string"
    },
    "url_key": {
      "type": "string",
      "pattern": "^\\S+$",
      "errorMessage": {
        "pattern": "Url key should not contain spaces"
      }
    },
    "status": {
      "type": ["integer", "string"],
      "enum": [0, 1, "0", "1"]
    },
    "include_in_nav": {
      "type": ["integer", "string"],
      "enum": [0, 1, "0", "1"]
    },
    "parent_id": {
      "type": ["string", "number", "null"],
      "pattern": "^[0-9]+$",
      "default": null
    },
    "position": {
      "type": ["string", "integer"],
      "pattern": "^[0-9]*$",
      "errorMessage": {
        "pattern": "Position should be a number"
      }
    }
  },
  "required": [
    "name",
    "description",
    "status",
    "meta_title",
    "meta_description"
  ],
  "additionalProperties": true
}
